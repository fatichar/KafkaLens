<Window x:Class="KafkaLens.App.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:KafkaLens.App"
        mc:Ignorable="d"
        Title="KafkaLens" Height="450" Width="800"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:viewmodels="clr-namespace:KafkaLens.App.ViewModels" 
        d:DataContext="{d:DesignInstance Type=viewmodels:ClustersViewModel}">
    
    <DockPanel x:Name="mainDockPanel" LastChildFill="False">
        <Menu x:Name="mainMenu" IsMainMenu="True" DockPanel.Dock="Top">
            <MenuItem x:Name="fileMenu" Header="File">
                <MenuItem x:Name="addClusterMenu" Header="Add cluster"
                          Command="{Binding AddClusterCommand}">
                </MenuItem>
                <MenuItem x:Name="openClusterMenu" Header="Open cluster" ItemsSource="{Binding Clusters}">
                    <MenuItem.ItemTemplate>
                        <HierarchicalDataTemplate>
                            <MenuItem Header="{Binding Name}" 
                                      Command="{Binding OpenClusterCommand}"/>
                        </HierarchicalDataTemplate>
                    </MenuItem.ItemTemplate>
                </MenuItem>/>
            </MenuItem>
        </Menu>
        <local:Navigator x:Name="navigator" Background="#FFDFE5EF" DockPanel.Dock="Left" Width="100" BorderThickness="1" BorderBrush="#FF558FE7">
            
        </local:Navigator>
        
        <local:SettingsPanel x:Name="settingsPanel" DockPanel.Dock="Right" Background="#FFDFE5EF" Width="100" BorderThickness="1" BorderBrush="#FF558FE7">
            
        </local:SettingsPanel>
    </DockPanel>
</Window>
