<UserControl x:Class="KafkaLens.App.Controls.MessagesToolbar"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
             xmlns:local="clr-namespace:KafkaLens.App"
             xmlns:System="clr-namespace:System;assembly=mscorlib"
             xmlns:core="clr-namespace:KafkaLens.Core.Services;assembly=KafkaLens.Core"
             mc:Ignorable="d" d:DesignWidth="800" Height="Auto">
    <Grid>
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="Auto"/>
            <ColumnDefinition Width="*"/>
            <ColumnDefinition Width="Auto"/>
        </Grid.ColumnDefinitions>
        <ToolBar Grid.Column="0">
            <Label Content="Contains"/>
            <TextBox x:Name="positiveFilterBox" MinWidth="300" VerticalContentAlignment="Center"/>
            <Label Content="But not"/>
            <TextBox x:Name="negativeFilterBox" MinWidth="300" VerticalContentAlignment="Center"/>
        </ToolBar>
    </Grid>
</UserControl>
