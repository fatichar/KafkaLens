<UserControl x:Class="KafkaLens.App.Controls.PartitionInfoPanel"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
             xmlns:local="clr-namespace:KafkaLens.App.Controls"
             mc:Ignorable="d"
             d:DesignHeight="300" d:DesignWidth="300"
             xmlns:viewModels="clr-namespace:KafkaLens.ViewModels;assembly=KafkaLens.ViewModels"
             d:DataContext="{d:DesignInstance Type=viewModels:PartitionViewModel}">
    <DockPanel>
        <TextBlock HorizontalAlignment="Center" FontSize="20"
                   Text="{Binding Name, StringFormat=Partition: ${0}}"/>
    </DockPanel>
</UserControl>
