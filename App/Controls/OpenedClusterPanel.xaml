<UserControl x:Class="KafkaLens.App.Controls.OpenedClusterPanel"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
    mc:Ignorable="d" 
    d:DesignHeight="1000" d:DesignWidth="200"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:viewmodels="clr-namespace:KafkaLens.App.ViewModels" 
    xmlns:local="clr-namespace:KafkaLens.App.Controls"
    d:DataContext="{d:DesignInstance Type=viewmodels:OpenedClusterViewModel}">
    <DockPanel HorizontalAlignment="Stretch" VerticalAlignment="Stretch">
        <local:Navigator x:Name="navigator"
            DockPanel.Dock="Left"
            Width="200" 
            Background="#FFDFE5EF" 
            BorderThickness="1" 
            BorderBrush="#FF558FE7">
        </local:Navigator>

        <local:SettingsPanel x:Name="settingsPanel"
            DockPanel.Dock="Right"
            Background="#FFDFE5EF" 
            Width="100" BorderThickness="1" 
            BorderBrush="#FF558FE7">
        </local:SettingsPanel>
        
        <local:Browser x:Name="clusterBrowser" DataContext="{Binding CurrentMessages}">

        </local:Browser>

    </DockPanel>
</UserControl>
