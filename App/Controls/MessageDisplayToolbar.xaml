<UserControl x:Class="KafkaLens.App.Controls.MessageDisplayToolbar"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
             xmlns:local="clr-namespace:KafkaLens.App"
             xmlns:System="clr-namespace:System;assembly=mscorlib"
             xmlns:core="clr-namespace:KafkaLens.Core.Services;assembly=KafkaLens.Core"
             mc:Ignorable="d" d:DesignWidth="800" Height="Auto">
    <Grid>
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="Auto"/>
            <ColumnDefinition Width="*"/>
            <ColumnDefinition Width="Auto"/>
        </Grid.ColumnDefinitions>
            <ToolBar Grid.Column="0">
            <Label Content="Filter"/>
            <TextBox x:Name="filterBox" MinWidth="300" VerticalContentAlignment="Center"
                Text="{Binding CurrentMessages.LineFilter, Mode=TwoWay, UpdateSourceTrigger=PropertyChanged}" />
        </ToolBar>
        <ToolBar Grid.Column="2">
            <Label Content="Zoom"/>
            <Slider x:Name="fontSizeSlider" Margin="5" Width="200"
                Minimum="6" Maximum="32" Value="{Binding FontSize, Mode=TwoWay}"/>
        </ToolBar>
    </Grid>
</UserControl>
