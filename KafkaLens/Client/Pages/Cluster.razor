@page "/cluster/{ClusterName}"
@page "/cluster/{ClusterName}/{TopicName}"
@page "/cluster/{ClusterName}/{TopicName}/{PartitionNo:int?}"

@if (TopicName == null)
{
    <ClusterView Cluster="@KafkaCluster"/>
}
else if (PartitionNo == null)
{
    <TopicView Cluster="@KafkaCluster" TopicName="@TopicName"/>
}
else
{
    @*<PartitionView />*@
}