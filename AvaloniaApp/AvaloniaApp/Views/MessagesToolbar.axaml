<UserControl x:Class="AvaloniaApp.Views.MessagesToolbar"
	xmlns="https://github.com/avaloniaui"
	xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
	xmlns:vm="clr-namespace:KafkaLens.ViewModels;assembly=KafkaLens.ViewModels"
	x:DataType="vm:OpenedClusterViewModel">
	<Grid ColumnDefinitions="Auto, *, Auto, *" Margin="5">
		<Label Grid.Column="0" VerticalAlignment="Center" Margin="0,0,5,0">Contains</Label>
		<TextBox Grid.Column="1" x:Name="PositiveFilterBox"
		         VerticalContentAlignment="Center" VerticalAlignment="Center"
		         Text="{Binding CurrentMessages.PositiveFilter}"
		         Watermark="Filter (Ctrl+F)"/>
		<Label Grid.Column="2" Content="But not" VerticalAlignment="Center" Margin="10,0,5,0"/>
		<TextBox Grid.Column="3" x:Name="NegativeFilterBox"
		         VerticalContentAlignment="Center" VerticalAlignment="Center"
		         Text="{Binding Path=CurrentMessages.NegativeFilter}"
		         Watermark="Exclude"/>
	</Grid>
</UserControl>