<UserControl x:Class="AvaloniaApp.Views.FetchPanel"
             xmlns="https://github.com/avaloniaui"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:vm="clr-namespace:KafkaLens.ViewModels;assembly=KafkaLens.ViewModels"
             xmlns:avaloniaApp="clr-namespace:AvaloniaApp"
             x:DataType="vm:OpenedClusterViewModel">
    <UserControl.Resources>
        <avaloniaApp:FetchPositionConverter x:Key="IsTimestampPosition" />
    </UserControl.Resources>
    <Grid Margin="5" RowDefinitions="Auto, Auto, Auto, Auto, *" ColumnDefinitions="Auto, *"
          VerticalAlignment="Top">
        <Label Grid.Row="0" Grid.Column="0"
               VerticalAlignment="Center"
               Margin="5">
            From
        </Label>
        <ComboBox Grid.Row="0" Grid.Column="1" Margin="5"
                  HorizontalAlignment="Stretch" HorizontalContentAlignment="Center"
                  ItemsSource="{Binding FetchPositions}"
                  SelectedItem="{Binding FetchPosition, Mode=TwoWay}">
        </ComboBox>

        <StackPanel Grid.Row="1" Grid.Column="1"
                  Orientation="Vertical" Spacing="8"
                  IsVisible="{Binding FetchPosition, Converter={StaticResource IsTimestampPosition}, ConverterParameter=Timestamp}"
                  MinWidth="160"
                  Margin="5">
            <CalendarDatePicker Name="StartDatePicker"
                              SelectedDate="{Binding StartDate, Mode=TwoWay}"
                              HorizontalAlignment="Stretch"
                              MinWidth="160"/>
            <StackPanel Orientation="Vertical" Spacing="4">
                <TextBox Name="TimeTextBox"
                         Text="{Binding StartTimeText}"
                         Watermark="HH:mm:ss"
                         MinWidth="80"
                         HorizontalAlignment="Stretch">
                    <TextBox.Styles>
                        <Style Selector="TextBox.error">
                            <Setter Property="BorderBrush" Value="#FF4444"/>
                            <Setter Property="BorderThickness" Value="2"/>
                        </Style>
                    </TextBox.Styles>
                </TextBox>
                <TextBlock Text="Invalid time format (HH:mm:ss)"
                           Foreground="#FF4444"
                           FontSize="11"
                           IsVisible="{Binding !IsStartTimeValid}"/>
            </StackPanel>
        </StackPanel>

        <StackPanel Grid.Row="1" Grid.Column="1"
                    Orientation="Vertical" Spacing="8"
                    IsVisible="{Binding FetchPosition, Converter={StaticResource IsTimestampPosition}, ConverterParameter=Offset}"
                    MinWidth="160"
                    Margin="5">
            <TextBox Name="OffsetTextBox"
                     Text="{Binding StartOffset}"
                     Watermark="Offset"
                     MinWidth="80"
                     HorizontalAlignment="Stretch"/>
        </StackPanel>

        <Label Grid.Row="2" Grid.Column="0"
               VerticalAlignment="Center"
               Margin="5">Count</Label>
        <ComboBox Grid.Row="2" Grid.Column="1" SelectedIndex="0"
                  ItemsSource="{Binding FetchCounts}" Margin="5"
                  HorizontalAlignment="Stretch" HorizontalContentAlignment="Center"

                  SelectedItem="{Binding FetchCount, Mode=TwoWay}">
            <ComboBox.Styles>
                <Style Selector="ComboBox /template/ ContentControl">
                    <Setter Property="HorizontalContentAlignment" Value="Center" />
                    <Setter Property="HorizontalAlignment" Value="Stretch" />
                </Style>
            </ComboBox.Styles>
        </ComboBox>

        <Button Content="Fetch Messages" Command="{Binding FetchMessagesCommand}"
                Grid.Row="3" Grid.Column="1"
                HorizontalAlignment="Stretch" HorizontalContentAlignment="Center"
                Height="30" Margin="5" />
    </Grid>

</UserControl>