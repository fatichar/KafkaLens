<Application xmlns="https://github.com/avaloniaui"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:local="using:AvaloniaApp"
             xmlns:hyperlink="clr-namespace:HyperText.Avalonia;assembly=HyperText.Avalonia"
             x:Class="AvaloniaApp.App">

    <Application.DataTemplates>
        <local:ViewLocator />
    </Application.DataTemplates>

    <Application.Resources>
        <ResourceDictionary>
            <SolidColorBrush x:Key="StatusConnectedBrush">#28A745</SolidColorBrush>
            <SolidColorBrush x:Key="StatusDisconnectedBrush">#DC3545</SolidColorBrush>
            <SolidColorBrush x:Key="StatusUnknownBrush">#6C757D</SolidColorBrush>
        </ResourceDictionary>
    </Application.Resources>

    <Application.Styles>
        <FluentTheme />
        <hyperlink:HyperLinkStyle/>
        <StyleInclude Source="avares://Avalonia.Controls.DataGrid/Themes/Fluent.xaml" />
        <StyleInclude Source="avares://AvaloniaEdit/Themes/Fluent/AvaloniaEdit.xaml" />

        <Style Selector="Ellipse.status">
            <Setter Property="Fill" Value="{DynamicResource StatusUnknownBrush}"/>
        </Style>
        <Style Selector="Ellipse.status[Tag=Green]">
            <Setter Property="Fill" Value="{DynamicResource StatusConnectedBrush}"/>
        </Style>
        <Style Selector="Ellipse.status[Tag=Red]">
            <Setter Property="Fill" Value="{DynamicResource StatusDisconnectedBrush}"/>
        </Style>
        <Style Selector="Ellipse.status[Tag=Gray]">
            <Setter Property="Fill" Value="{DynamicResource StatusUnknownBrush}"/>
        </Style>

        <!-- Theme-aware DataGrid selection -->
        <Style Selector="DataGridRow:selected /template/ Rectangle#BackgroundRectangle">
            <Setter Property="Fill" Value="{DynamicResource ThemeSelectionBrush}" />
        </Style>
        <Style Selector="DataGridRow:selected /template/ ContentPresenter">
            <Setter Property="TextElement.Foreground" Value="{DynamicResource ThemeSelectionForegroundBrush}" />
        </Style>

        <!-- Theme-aware Button styling -->
        <Style Selector="Button">
            <Setter Property="Background" Value="{DynamicResource ThemeButtonBackgroundBrush}" />
            <Setter Property="Foreground" Value="{DynamicResource ThemeButtonForegroundBrush}" />
            <Setter Property="BorderThickness" Value="0" />
            <Setter Property="CornerRadius" Value="4" />
            <Setter Property="Padding" Value="12,6" />
        </Style>
        <Style Selector="Button:pointerover /template/ ContentPresenter#PART_ContentPresenter">
            <Setter Property="Background" Value="{DynamicResource ThemeButtonHoverBrush}" />
            <Setter Property="TextElement.Foreground" Value="{DynamicResource ThemeButtonForegroundBrush}" />
        </Style>

        <!-- Subtle GridSplitter -->
        <Style Selector="GridSplitter">
            <Setter Property="Background" Value="{DynamicResource ThemeGridSplitterBrush}" />
        </Style>
        <Style Selector="GridSplitter:pointerover">
            <Setter Property="Background" Value="{DynamicResource ThemeAccentBrush}" />
        </Style>
    </Application.Styles>
</Application>
