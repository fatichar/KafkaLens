<UserControl x:Class="KafkaLens.Views.MessagesToolbar"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
             mc:Ignorable="d" d:DesignWidth="800" Height="Auto"
            xmlns:controls="using:CommunityToolkit.WinUI.UI.Controls">
        
        <controls:WrapPanel MaxHeight="30" Margin="10,0" Width="Auto">
            <TextBlock Text="Contains" VerticalAlignment="Center" Margin="10,0"/>
            <TextBox x:Name="positiveFilterBox" MinWidth="400" MaxWidth="600" Width="Auto" MaxHeight="30" VerticalAlignment="Center" VerticalContentAlignment="Center"
                     Text="{Binding CurrentMessages.PositiveFilter, Mode=TwoWay, UpdateSourceTrigger=PropertyChanged}"/>
            <TextBlock Text="But not" VerticalAlignment="Center" Margin="10,0"/>
            <TextBox x:Name="negativeFilterBox" MinWidth="300" MaxHeight="30" VerticalAlignment="Center" VerticalContentAlignment="Center"
                     Text="{Binding Path=CurrentMessages.NegativeFilter, Mode=TwoWay, UpdateSourceTrigger=PropertyChanged}"/>
        </controls:WrapPanel>
</UserControl>
